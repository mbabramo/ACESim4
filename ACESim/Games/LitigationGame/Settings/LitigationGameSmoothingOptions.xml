  <defineTemplate name="GRNNSmoothingOptions">
    <setting name="SmoothingOptions" type="class" subclass="GRNNSmoothingOptions">
      <insertTemplate name="OversamplingOptions" />
      <setting name="PreliminaryOptimizationPrecision" type="double">0.00001</setting>
      <setting name="MemoryLimitForIterations" type="int">1000000000</setting>
