<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<ACESim>
  
  <gameDefinitionsAll>
    <gameDefinition name="LitigationGame">
      <setting name="DecisionsExecutionOrder" type="list">
      </setting>
      <setting name="GameModules" type="list">
        <!-- INCLUDE HERE ALL MODULES IN EXECUTION ORDER. ALSO, PUT THEM IN SAME ORDER IN LITIGATIONGAMEINPUTS.XML -->
        <insertTemplate name="DummyModuleBeginning" />
        <insertTemplate name="DisputeGeneratorModule"/>
        <insertTemplate name="ProbabilityForecastingModule" />
        <insertTemplate name="DamagesForecastingModule" />
        <insertTemplate name="LitigationCostModule"/>
        <insertTemplate name="BeginningDropOrDefaultModule" />
        <insertTemplate name="BargainingAggressivenessModule1" />
        <insertTemplate name="BargainingAggressivenessModule2" />
        <insertTemplate name="BargainingModule" />
        <insertTemplate name="MidDropOrDefaultModule" />
        <insertTemplate name="AdjustmentsModule1" />
        <insertTemplate name="AdjustmentsModule2" />
        <insertTemplate name="EndDropOrDefaultModule" />
        <insertTemplate name="TrialModule" />
        <insertTemplate name="ProbabilityPWinsForecastingModule" />
        <insertTemplate name="CumulativeDistributionModule" />
        <insertTemplate name="DummyModuleEnd" />
      </setting>
      <setting name="GameModuleNamesGameReliesOn" type="list">
        <!-- INCLUDE HERE ONLY THOSE MODULES THAT ARE DIRECTLY REFERENCED BY THE LITIGATION GAME ITSELF; EXCLUDE PLUGINS THAT LITIGATIONGAME.CS NEED NOT KNOW ABOUT -->
        <setting name="NecessaryGameModule" type="text">DisputeGeneratorModule</setting>
        <setting name="NecessaryGameModule" type="text">ProbabilityForecastingModule</setting>
        <setting name="NecessaryGameModule" type="text">DamagesForecastingModule</setting>
        <setting name="NecessaryGameModule" type="text">LitigationCostModule</setting>
        <setting name="NecessaryGameModule" type="text">BeginningDropOrDefaultModule</setting>
        <setting name="NecessaryGameModule" type="text">BargainingModule</setting>
        <setting name="NecessaryGameModule" type="text">MidDropOrDefaultModule</setting>
        <setting name="NecessaryGameModule" type="text">AdjustmentsModule1</setting>
        <setting name="NecessaryGameModule" type="text">AdjustmentsModule2</setting>
        <setting name="NecessaryGameModule" type="text">EndDropOrDefaultModule</setting>
        <setting name="NecessaryGameModule" type="text">TrialModule</setting>
        <setting name="NecessaryGameModule" type="text">ProbabilityPWinsForecastingModule</setting>
      </setting>
      <setting name="ActionGroupsEvolveInOppositeOrderFromExecution" type="bool">
        true
      </setting>
      <setting name="AutomaticRepetitions" type="list">
        <setting name="ActionGroupRepetition" type="class">
          <setting name="Tag" type="text">Bargaining subclaim</setting>
          <setting name="Repetitions" type="int">$BargainingClaimComponents</setting>
          <setting name="TagToOmitFirstTime" type="text"></setting>
          <setting name="TagToOmitLastTime" type="text"></setting>
          <setting name="IsEvolutionRepetitionOnly" type="bool">FALSE</setting>
        </setting>
        <setting name="ActionGroupRepetition" type="class">
          <setting name="Tag" type="text">Bargaining round</setting>
          <setting name="Repetitions" type="int">$BargainingRepetitions</setting>
          <setting name="TagToOmitFirstTime" type="text"></setting>
          <setting name="TagToOmitLastTime" type="text">Drop middle bargaining round</setting>
          <setting name="IsEvolutionRepetitionOnly" type="bool">FALSE</setting>
        </setting>
        <setting name="ActionGroupRepetition" type="class">
          <setting name="Tag" type="text">All</setting>
          <setting name="Repetitions" type="int">$RepetitionsOfAllModules</setting>
          <setting name="TagToOmitFirstTime" type="text"></setting>
          <setting name="TagToOmitLastTime" type="text"></setting>
          <setting name="IsEvolutionRepetitionOnly" type="bool">TRUE</setting>
        </setting>
        <setting name="ActionGroupRepetition" type="class">
          <setting name="Tag" type="text">Range uncertainty aggressiveness iteration</setting>
          <setting name="Repetitions" type="int">$RangeUncertaintyAggressivenessIterations</setting>
          <setting name="TagToOmitFirstTime" type="text"></setting>
          <setting name="TagToOmitLastTime" type="text"></setting>
          <setting name="IsEvolutionRepetitionOnly" type="bool">TRUE</setting>
        </setting>
      </setting>
    </gameDefinition>
  </gameDefinitionsAll>
</ACESim>