<?xml version="1.0" encoding="utf-8" ?>

<ACESim>

  <gameInputsAll>
    <gameInputs name="ObfuscationGameInputs" gameName="ObfuscationGame">
      <setting name="actualNumber" type="distribution" subtype="uniform">
        <setting type="double" name="fromVal">0.0</setting>
        <setting type="double" name="toVal">1.0</setting>
      </setting>
      <setting name="standardDeviationOfObfuscation" type="distribution" subtype="mixture">
        <setting type="bool" name="average">false</setting>
        <setting name="subdistributions" type="list">
          <setting name="fullRange" type="distribution" subtype="uniform">
            <setting type="double" name="fromVal">0.0</setting>
            <setting type="double" name="toVal">1.0</setting>
          </setting>
          <setting name="veryLow" type="distribution" subtype="uniform">
            <setting type="double" name="fromVal">0.0</setting>
            <setting type="double" name="toVal">0.0001</setting>
          </setting>
          <setting name="veryLow2" type="distribution" subtype="uniform">
            <setting type="double" name="fromVal">0.0</setting>
            <setting type="double" name="toVal">0.0001</setting>
          </setting>
          <setting name="veryLow3" type="distribution" subtype="uniform">
            <setting type="double" name="fromVal">0.0</setting>
            <setting type="double" name="toVal">0.0001</setting>
          </setting>
          <setting name="veryLow4" type="distribution" subtype="uniform">
            <setting type="double" name="fromVal">0.0</setting>
            <setting type="double" name="toVal">0.0001</setting>
          </setting>
        </setting>
      </setting>
      <setting name="obfuscation" type="distribution" subtype="normal">
        <setting type="double" name="mean">0.0</setting>
        <setting type="variableFromSetting" name="stdev">standardDeviationOfObfuscation</setting>
      </setting>
      <setting name="numberWithObfuscation" type="calc" operator="+">
        <setting type="variableFromSetting" name="actual">actualNumber</setting>
        <setting type="variableFromSetting" name="obf">obfuscation</setting>
      </setting>
    </gameInputs>
  </gameInputsAll>

</ACESim>