<ACESim>

  <parentSettingsFile filename="SmoothingOptions.xml" />
  
  <evolutionSettingsAll>
    <evolutionSettings name="SimpleEvolution">
      <setting name="ParallelOptimization" type="bool">false</setting>
      <setting name="StopParallelOptimizationAfterOptimizingNDecisions" type="int">-1</setting>

      <setting name="AverageInPreviousVersionsOfStrategy" type="bool">$AverageInPreviousVersionsOfStrategy</setting>
      <setting name="UseAlternatingAveraging" type="bool">$UseAlternatingAveraging</setting>
      <setting name="StartAveragingInPreviousVersionsOfStrategyOnStepN" type="int">$StartAveragingInPreviousVersionsOfStrategyOnStepN</setting>
      
      <setting name="DoNotEvolveByDefault" type="bool">false</setting>
      <setting name="RepetitionsOfEntireSmoothingProcess" type="int">1</setting>
      <setting name="NumberPointsInCumulativeDistribution" type="int">51</setting>

      <setting name="SmoothingPointsMainSet" type="class">
        <setting name="NumSmoothingPoints" type="distribution" subtype="curve">
          <setting name="fromVal" type="double">1000</setting>
          <setting name="toVal" type="double">1000</setting>
          <setting name="curvature" type="double">0.5</setting>
          <setting name="input" type="variableFromProgram">EvolveStepPctThisDecision</setting>
        </setting>
        <setting name="NumIterations" type="distribution" subtype="curve">
          <setting name="fromVal" type="double">100,000</setting>
          <setting name="toVal" type="double">100,000</setting>
          <setting name="curvature" type="double">0.5</setting>
          <setting name="input" type="variableFromProgram">EvolveStepPctThisDecision</setting>
        </setting>
        <setting name="ChunkIterationsForRemoting" type="bool">FALSE</setting>
        <setting name="RemotingCanSeparateFindingAndSmoothing" type="bool">FALSE</setting>
        <setting name="UseWorkerRolesForRemoting" type="bool">FALSE</setting>
        <setting name="ChunkSizeForRemoting" type="int">100,000</setting>
        <setting name="SmoothingPointsMultiplierForEachInputAboveTwo" type="double">1.3</setting>
        <setting name="IterationsMultiplierForEachInputAboveTwo" type="double">1.3</setting>
        <setting name="MaxIterationsPerSmoothingPoint" type="int">150</setting>
        <setting name="ChooseSmoothingPointsByClusteringLargerNumberOfPoints" type="bool">false</setting>
        <setting name="LargerNumberOfPointsFromWhichToClusterSmoothingPoints" type="int">500</setting>
      </setting>
      
      <setting name="SmoothingPointsValidationSet" type="class" subclass="SmoothingPointsValidationSetQuantification">
        <setting name="NumSmoothingPoints" type="int">500</setting>
        <setting name="NumIterations" type="long">10,000</setting>
        <setting name="ChunkIterationsForRemoting" type="bool">FALSE</setting>
        <setting name="RemotingCanSeparateFindingAndSmoothing" type="bool">FALSE</setting>
        <setting name="UseWorkerRolesForRemoting" type="bool">FALSE</setting>
        <setting name="ChunkSizeForRemoting" type="int">100,000</setting>
        <setting name="SmoothingPointsMultiplierForEachInputAboveTwo" type="double">1.3</setting>
        <setting name="IterationsMultiplierForEachInputAboveTwo" type="double">1.3</setting>
        <setting name="MaxIterationsPerSmoothingPoint" type="int">100</setting>
        <setting name="CreateValidationSet" type="bool">true</setting>
      </setting>

      <!--<insertTemplate name="NeuralNetworkWithoutPresmoothingOptions"/>-->
      <!--<insertTemplate name="NearestNeighborSmoothingOptions"/>-->
      <!--<insertTemplate name="RegressionBasedSmoothingOptionsFast"/>-->
      <!--<insertTemplate name="RegressionBasedSmoothingOptions"/>-->
      <!--<insertTemplate name="RPROPSmoothingOptions"/>-->
      <insertTemplate name="GRNNSmoothingOptionsFast"/>
      <!--<insertTemplate name="DirectScoreEstimationSmoothingOptions"/>-->
      <!--<insertTemplate name="DirectScoreEstimationThoroughSmoothingOptions"/>-->
      <!--<insertTemplate name="DirectScoreEstimationExperimentalSmoothingOptions"/>-->
      
    </evolutionSettings>
  </evolutionSettingsAll>
</ACESim>