<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ACESimMultiple>
  <singleSettingsFile filename="PatentDamagesBaselineVariableSettings.xml">
    <defineVariableAlternatives name="entrants">
      <defineVariableAlternative name="sin" star="true">
        <defineVariable findString="$MaxNumEntrants" replaceString="1"/>
        <defineVariable findString="$MaxRepetitionsNumEntrantsEvolution" replaceString="99999"/>
      </defineVariableAlternative>
      <defineVariableAlternative name="dyn" star="true">
        <defineVariable findString="$MaxNumEntrants" replaceString="10"/>
        <defineVariable findString="$MaxRepetitionsNumEntrantsEvolution" replaceString="99999"/>
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="glox">
      <defineVariableAlternative name="gloxscen" star="true">
        <defineVariable findString="$WeightOnCostPlusDamages" replaceString="1.0"/>
        <defineVariable findString="$HighestInventionValueNoiseStdev" replaceString="0.0"/>
        <defineVariable findString="$HighestInventionValueCourtNoiseStdev" replaceString="0.00"/>
        <defineVariable findString="$PermittedRateOfReturn" replaceString="0.001"/> 
        <defineVariable findString="$UseExpectedCostForCostPlus" replaceString="true"/>
        <defineVariable findString="$ExpectedCostIsSpecificToInventor" replaceString="true"/>
        <defineVariable findString="$UseExactCalculationForTryDecision" replaceString="true"/>
      </defineVariableAlternative>
      <!--Same as perfect assumptions but using the regular approach to damages. -->
      <defineVariableAlternative name="invvaluecomp" star="true">
        <defineVariable findString="$WeightOnCostPlusDamages" replaceString="0.0"/>
        <defineVariable findString="$HighestInventionValueNoiseStdev" replaceString="0.0"/>
        <defineVariable findString="$HighestInventionValueCourtNoiseStdev" replaceString="0.00"/>
        <defineVariable findString="$PermittedRateOfReturn" replaceString="0.001"/>
        <defineVariable findString="$UseExpectedCostForCostPlus" replaceString="true"/>
        <defineVariable findString="$ExpectedCostIsSpecificToInventor" replaceString="true"/>
      </defineVariableAlternative>
    </defineVariableAlternatives>
  </singleSettingsFile>
</ACESimMultiple>