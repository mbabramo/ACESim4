<ACESim>

  <parentSettingsFile filename="LitigationGameSmoothingOptions.xml" />

  <evolutionSettingsAll>
    <evolutionSettings name="SimpleEvolution">

      <setting name="NumPointsInCumulativeDistribution" type="int">$NumPointsInCumulativeDistribution</setting>
      <setting name="NumGamePlaysForCumulativeDistribution" type="int">$NumGamePlaysForCumulativeDistribution</setting>

      <setting name="ParallelOptimization" type="bool">$ParallelOptimization</setting>
      <setting name="StopParallelOptimizationAfterOptimizingNDecisions" type="int">$StopParallelOptimizationAfterOptimizingNDecisions</setting>
      
      <setting name="AverageInPreviousVersionsOfStrategy" type="bool">$AverageInPreviousVersionsOfStrategy</setting>
      <setting name="UseAlternatingAveraging" type="bool">$UseAlternatingAveraging</setting>
      <setting name="StartAveragingInPreviousVersionsOfStrategyOnStepN" type="int">$StartAveragingInPreviousVersionsOfStrategyOnStepN</setting>
      
      <setting name="DoNotEvolveByDefault" type="bool">false</setting>
      <setting name="RepetitionsOfEntireSmoothingProcess" type="int">$RepetitionsOfEntireSmoothingProcess</setting>
      <setting name="NumberPointsInCumulativeDistribution" type="int">$NumberPointsInCumulativeDistribution</setting>

      <setting name="SmoothingPointsMainSet" type="class">
        <setting name="NumSmoothingPoints" type="distribution" subtype="curve">
          <setting name="fromVal" type="double">$MinSmoothingPoints</setting>
          <setting name="toVal" type="double">$MaxSmoothingPoints</setting>
          <setting name="curvature" type="double">0.5</setting>
          <setting name="input" type="variableFromProgram">EvolveStepPctThisDecision</setting>
        </setting>
        <setting name="NumIterations" type="distribution" subtype="curve">
          <setting name="fromVal" type="double">$MinIterations</setting>
          <setting name="toVal" type="double">$MaxIterations</setting>
          <setting name="curvature" type="double">0.3</setting>
          <setting name="input" type="variableFromProgram">EvolveStepPctThisDecision</setting>
        </setting>
        <setting name="ChunkIterationsForRemoting" type="bool">$ChunkIterationsForRemoting</setting>
        <setting name="RemotingCanSeparateFindingAndSmoothing" type="bool">$RemotingCanSeparateFindingAndSmoothing</setting>
        <setting name="UseWorkerRolesForRemoting" type="bool">$UseWorkerRolesForRemoting</setting>
        <setting name="ChunkSizeForRemoting" type="int">$ChunkSizeForRemoting</setting>
        <setting name="SmoothingPointsMultiplierForEachInputAboveTwo" type="double">$SmoothingPointsMultiplierForEachInputAboveTwo</setting>
        <setting name="IterationsMultiplierForEachInputAboveTwo" type="double">$IterationsMultiplierForEachInputAboveTwo</setting>
        <setting name="MaxIterationsPerSmoothingPoint" type="int">10000000</setting>
        <setting name="ChooseSmoothingPointsByClusteringLargerNumberOfPoints" type="bool">$ChooseSmoothingPointsByClusteringLargerNumberOfPoints</setting>
        <setting name="LargerNumberOfPointsFromWhichToClusterSmoothingPoints" type="int">$LargerNumberOfPointsFromWhichToClusterSmoothingPoints</setting>
      </setting>

      <setting name="SmoothingPointsValidationSet" type="class" subclass="SmoothingPointsValidationSetQuantification">
        <setting name="NumSmoothingPoints" type="int">3333</setting>
        <setting name="NumIterations" type="long">100,000</setting>
        <setting name="RemotingCanSeparateFindingAndSmoothing" type="bool">$RemotingCanSeparateFindingAndSmoothing</setting>
        <setting name="ChunkIterationsForRemoting" type="bool">$ChunkIterationsForRemoting</setting>
        <setting name="UseWorkerRolesForRemoting" type="bool">$UseWorkerRolesForRemoting</setting>
        <setting name="ChunkSizeForRemoting" type="int">100000</setting>
        <setting name="SmoothingPointsMultiplierForEachInputAboveTwo" type="double">1.1</setting>
        <setting name="IterationsMultiplierForEachInputAboveTwo" type="double">1.1</setting>
        <setting name="MaxIterationsPerSmoothingPoint" type="int">10000</setting>
        <setting name="CreateValidationSet" type="bool">false</setting>
      </setting>

      <!--<insertTemplate name="NeuralNetworkWithoutPresmoothingOptions"/>-->
      <!--<insertTemplate name="NearestNeighborSmoothingOptions"/>-->
      <!--<insertTemplate name="RegressionBasedSmoothingOptionsFast"/>-->
      <!--<insertTemplate name="RegressionBasedSmoothingOptions"/>-->
      <!--<insertTemplate name="RPROPSmoothingOptions"/>-->
      <!--<insertTemplate name="GRNNSmoothingOptionsFast"/>-->
      <insertTemplate name="$SmoothingOptionSet"/>
      <!--<insertTemplate name="DecisionRepresentsCorrectAnswerSmoothingOptions"/>-->

    </evolutionSettings>
  </evolutionSettingsAll>
</ACESim>