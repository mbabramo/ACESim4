<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ACESimMultiple>
  <singleSettingsFile filename="LitigationGameSingleRunSettings.xml">
    <defineVariableAlternatives name="BaseSettings">
      <defineVariableAlternative name="noenddrop" star="true">
        <defineVariable findString="$EndDropOrDefaultModule" replaceString="NeverGiveUp"/>
        <defineVariable findString="$UseProportionalResultsWhenEvolvingEarlierDecisions" replaceString="true"/>
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="Bias">
      <defineVariableAlternative name="nobias" star="true">
        <defineVariable findString="$BiasAffectingEntireLegalSystemStdev" replaceString="0.0" />
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="Damages">
      <defineVariableAlternative name="100">
        <defineVariable findString="$ExogenousDamagesMin" replaceString="100" />
        <defineVariable findString="$ExogenousDamagesMax" replaceString="100" />
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="Info">
      <defineVariableAlternative name="infoasgood" star="true">
        <defineVariable findString="$PNoiseLevelMin" replaceString="0.05" />
        <defineVariable findString="$PNoiseLevelMax" replaceString="0.05" />
        <defineVariable findString="$DNoiseLevelMin" replaceString="0.05" />
        <defineVariable findString="$DNoiseLevelMax" replaceString="0.05" />
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="Rules">
      <defineVariableAlternative name="Usual">
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="Risk">
      <!--<defineVariableAlternative name="BothModRiskAv" star="true">
        <defineVariable findString="$RiskSelection" replaceString="BothPartiesRiskAverse" />
        <defineVariable findString="$RiskAversionLevel" replaceString="2.0" />
      </defineVariableAlternative>-->
      <defineVariableAlternative name="BothRiskNeutral" star="true">
        <defineVariable findString="$RiskSelection" replaceString="BothPartiesRiskNeutral" />
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="Dispute">
      <defineVariableAlternative name="Exogenous" star="true">
      </defineVariableAlternative>
      <!--<defineVariableAlternative name="Negligence">
        <defineVariable findString="$DisputeGeneratorModule" replaceString="NegligenceDisputeGenerator" />
        <defineVariable findString="$NegligenceInputs" replaceString="SimpleNegligenceInputs"/>
        <defineVariable findString="$UndetectedCasesForEachDetectedCaseMax" replaceString="10.0" />
      </defineVariableAlternative>-->
    </defineVariableAlternatives>
  </singleSettingsFile>
</ACESimMultiple>