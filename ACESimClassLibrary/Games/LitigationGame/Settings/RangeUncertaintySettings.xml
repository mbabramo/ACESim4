<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ACESimMultiple>
  <singleSettingsFile filename="LitigationGameSingleRunSettings.xml"> 
    <defineVariableAlternatives name="base">
      <defineVariableAlternative name="s14" star="true">

        <defineVariable findString="$EvolvingRangeUncertaintySettings" replaceString="true" />

        <!--<defineVariable findString="$SmoothingOptionSet" replaceString="RPROPSmoothingOptions" />-->

        <defineVariable findString="$MinSmoothingPoints" replaceString="100" />
        <defineVariable findString="$MaxSmoothingPoints" replaceString="100" />
        <defineVariable findString="$MinIterations" replaceString="500,000" />
        <defineVariable findString="$MaxIterations" replaceString="500,000" />
        <defineVariable findString="$RangeUncertaintyAggressivenessSmoothingPointsOverrideMin" replaceString="500" />
        <defineVariable findString="$RangeUncertaintyAggressivenessSmoothingPointsOverrideMax" replaceString="10,000" />
        <defineVariable findString="$RangeUncertaintyAggressivenessSmoothingPointsOverrideCurvature" replaceString="0.35" />
        <defineVariable findString="$RangeUncertaintyAggressivenessIterationsOverrideMin" replaceString="500,000" />
        <defineVariable findString="$RangeUncertaintyAggressivenessIterationsOverrideMax" replaceString="10,000,000" />
        <defineVariable findString="$RangeUncertaintyAggressivenessIterationsOverrideCurvature" replaceString="0.35" />
        <defineVariable findString="$RangeUncertaintyAggressivenessIterations" replaceString="9" />
        <defineVariable findString="$SmoothingPointsMultiplierForEachInputAboveTwo" replaceString="1.0" />
        <defineVariable findString="$IterationsMultiplierForEachInputAboveTwo" replaceString="1.0" />
        <!--
        <defineVariable findString="$RangeUncertaintyAggressivenessSmoothingPointsOverride" replaceString="10000" />
        <defineVariable findString="$RangeUncertaintyAggressivenessIterationsOverride" replaceString="5000000" />
        -->
        <defineVariable findString="$ChunkIterationsForRemoting" replaceString="TRUE" />
        <defineVariable findString="$RemotingCanSeparateFindingAndSmoothing" replaceString="TRUE" />
        <defineVariable findString="$UseWorkerRolesForRemoting" replaceString="TRUE" />
        <defineVariable findString="$ChunkSizeForRemoting" replaceString="25,000" />

        <defineVariable findString="$AverageInPreviousVersionsOfStrategy" replaceString="TRUE" />
        <defineVariable findString="$UseAlternatingAveraging" replaceString="TRUE" />
        <defineVariable findString="$StartAveragingInPreviousVersionsOfStrategyOnStepN" replaceString="2" />
        
        <defineVariable findString="$ParallelOptimization" replaceString="T" /> 
        <defineVariable findString="$StopParallelOptimizationAfterOptimizingNDecisions" replaceString="-1" />
        <defineVariable findString="$ParallelReporting" replaceString="T" />
        <defineVariable findString="$UseInitializeStrategiesFile" replaceString="F" />
        <defineVariable findString="$EvolveOnlyIfNecessary" replaceString="F" />

        <defineVariable findString="$RepetitionsOfEntireSmoothingProcess" replaceString="1" />
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives>
      <defineVariableAlternative name="rg1" star="true">
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="brgn">
      <defineVariableAlternative name="ddc" star="true">
        <defineVariable findString="$DropOrDefaultBasedOnProbabilityCutoffOnly" replaceString="T" />
        <defineVariable findString="$CaseResolvedBasedOnExogenouslySpecifiedProbability" replaceString="F"/>

        <!--<defineVariable findString="$BargainingAggressivenessOverrideSetting1" replaceString="Preset"/>
        <defineVariable findString="$PAggressivenessOverrideModifiedMin" replaceString="0.3" />
        <defineVariable findString="$PAggressivenessOverrideModifiedMax" replaceString="0.65" />
        <defineVariable findString="$DAggressivenessOverrideModifiedMin" replaceString="0.3" />
        <defineVariable findString="$DAggressivenessOverrideModifiedMax" replaceString="0.65" />
        <defineVariable findString="$BargainingAggressivenessOverrideSetting2" replaceString="Skip" />-->
        
        <defineVariable findString="$BargainingAggressivenessOverrideSetting1" replaceString="Skip"/>
        <defineVariable findString="$BargainingAggressivenessOverrideSetting2" replaceString="RangeUncertainty"/>
        
        <!--<defineVariable findString="$BargainingAggressivenessOverrideSetting1" replaceString="Skip"/>
        <defineVariable findString="$BargainingAggressivenessOverrideSetting2" replaceString="RangeUncertainty"/>-->

        <defineVariable findString="$BeginningDropOrDefaultModule" replaceString="NeverGiveUp"/>
        <defineVariable findString="$MidDropOrDefaultModule" replaceString="NeverGiveUp"/>
        <defineVariable findString="$EndDropOrDefaultModule" replaceString="NeverGiveUp"/>
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="lc">
      <defineVariableAlternative name="lcst" star="true">
        <defineVariable findString="$LitigationCostModule" replaceString="LitigationCostStandard"/>
        <defineVariable findString="$SpecificLitigationCostSettings" replaceString="LitigationCostStandardModule"/>
        <defineVariable findString="$CommonTrialExpensesMin" replaceString="0.0"/>
        <defineVariable findString="$CommonTrialExpensesMax" replaceString="2000.0"/>
        <defineVariable findString="$PAdditionalTrialExpensesMin" replaceString="0.0"/>
        <defineVariable findString="$PAdditionalTrialExpensesMax" replaceString="0.0"/>
        <defineVariable findString="$DAdditionalTrialExpensesMin" replaceString="0.0"/>
        <defineVariable findString="$DAdditionalTrialExpensesMax" replaceString="0.0"/>
        <defineVariable findString="$PInvestigationExpensesIfDispute" replaceString="0.0"/>
        <defineVariable findString="$DInvestigationExpensesIfDispute" replaceString="0.0"/>
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="Bias">
      <defineVariableAlternative name="nb" star="true">
        <defineVariable findString="$BiasAffectingEntireLegalSystemStdev" replaceString="0.0" />
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="Damages">
      <defineVariableAlternative name="1000" star="true">
        <defineVariable findString="$ExogenousDamagesMin" replaceString="1000" />
        <defineVariable findString="$ExogenousDamagesMax" replaceString="1000" />
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="Info">
      <defineVariableAlternative name="n15" star="true">
        <!--This is critical; we are varying the noise levels when evolving range uncertainty settings.-->
        <!--Also, each player knows other's noise level, so we can develop good estimate of threat point uncertainty.-->
        <defineVariable findString="$JudgeNoiseLevelLiability" replaceString="0.15"/>
        <defineVariable findString="$PNoiseLevelMin" replaceString="0.0" />
        <defineVariable findString="$PNoiseLevelMax" replaceString="0.2" />
        <defineVariable findString="$DNoiseLevelMin" replaceString="0.0" />
        <defineVariable findString="$DNoiseLevelMax" replaceString="0.2" /> 
        <defineVariable findString="$DNoiseInEstimatingPNoiseLevel" replaceString="0.0" />
        <defineVariable findString="$PNoiseInEstimatingDNoiseLevel" replaceString="0.0" />
        <defineVariable findString="$NoiseLevelOfPlaintiffIndependentInformation" replaceString="1000"/>
        <defineVariable findString="$NoiseLevelOfDefendantIndependentInformation" replaceString="1000"/>
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="Rules">
      <defineVariableAlternative name="wp" star="true">
        <defineVariable findString="$LoserPaysRule" replaceString="false"/>
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="Risk">
      <defineVariableAlternative name="rnt" star="true">
        <defineVariable findString="$RiskSelection" replaceString="BothPartiesRiskNeutral" />
      </defineVariableAlternative>
    </defineVariableAlternatives>
    <defineVariableAlternatives name="mr">
      <defineVariableAlternative name="rndtmp" star="true">
        <defineVariable findString="$BargainingRepetitions" replaceString="1" />
        <defineVariable findString="$DivideBargainingIntoMinirounds" replaceString="false" />
        <defineVariable findString="$NumBargainingMinirounds" replaceString="1" />
        <defineVariable findString="$PMarginalInvestigationExpensesAfterEachMiddleBargainingRound" replaceString="0"/>
        <defineVariable findString="$DMarginalInvestigationExpensesAfterEachMiddleBargainingRound" replaceString="0"/>
        <defineVariable findString="$PMarginalInvestigationExpensesAfterFirstBargainingRound" replaceString="0"/>
        <defineVariable findString="$DMarginalInvestigationExpensesAfterFirstBargainingRound" replaceString="0"/>
        <defineVariable findString="$PMarginalInvestigationExpensesAfterLastBargainingRound" replaceString="0"/>
        <defineVariable findString="$DMarginalInvestigationExpensesAfterLastBargainingRound" replaceString="0"/> 
      </defineVariableAlternative>
    </defineVariableAlternatives>
  </singleSettingsFile>
</ACESimMultiple>